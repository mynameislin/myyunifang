<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@mipmap/back_normal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:id="@+id/shou_fan"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/shou_title"
            android:layout_alignTop="@+id/shou_fan"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@mipmap/share_normal"
            android:id="@+id/shou_fen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="9dp"
            />
    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shou_web"
        ></WebView>
</LinearLayout>
